<h2>お手伝い記録編集</h2>

<%= form_with model: [@child, @task_log], local: true do |f| %>
 <div>
  <%= f.label :task_template_id, "お手伝い内容" %>
  <%= f.collection_select :task_template_id, TaskTemplate.all, :id, :title %>
 </div>

 <div>
  <%= f.label :image, "写真" %>
  <%= f.file_field :image %>
  <% if  @task_log.image.attached? %>
    <%= image_tag @task_log.image.variant(resize_to_limit: [300, 300]) %>
  <% end %>
 </div>

 <%= f.submit "更新"%>
<% end %>

