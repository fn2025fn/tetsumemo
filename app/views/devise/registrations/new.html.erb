<div class="container">
  <h2>新規登録</h2>

  <%= form_with model: resource, url: registration_path(resource_name), local: true do |f| %>
    <div>
      <%= f.label :name, "お名前" %>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :role, "区分" %>
      <%= f.select :role, [["パパ", "papa"], ["ママ", "mama"], ["その他", "other"]],
          { prompt: "選択してください" } %>
    </div>

    <div>
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email %>
    </div>

    <div>
      <%= f.label :password, "パスワード（6文字以上）" %>
      <%= f.password_field :password %>
    </div>

    <div>
      <%= f.label :password_confirmation, "パスワード（確認）" %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div>
      <%= f.submit "登録する" %>
    </div>
  <% end %>
</div>