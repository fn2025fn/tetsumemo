<h2>子供情報を編集</h2>

<%= form_with model: @child, local: true do |form| %>
  <div>
    <%= form.label :name, "名前" %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :icon, "アイコン画像" %><br>
    <%= form.file_field :icon %>
  </div>

  <%= form.submit "更新する" %>
<% end %>

<%= link_to "戻る", child_path(@child) %>